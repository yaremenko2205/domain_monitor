# Cron endpoint protection
CRON_SECRET=your-random-secret-here

# Base URL for internal fetch calls (scheduler) — use https:// in production
NEXT_PUBLIC_BASE_URL=https://localhost

# Default check schedule (overridden by DB settings)
CHECK_SCHEDULE=0 8 * * *

# Auth (generate with: openssl rand -base64 32)
AUTH_SECRET=
AUTH_TRUST_HOST=true

# Microsoft Azure AD OAuth (https://portal.azure.com → App registrations)
AZURE_AD_CLIENT_ID=
AZURE_AD_CLIENT_SECRET=
AZURE_AD_TENANT_ID=common

# Set to your email to claim pre-existing domains on first login
LEGACY_ADMIN_EMAIL=
